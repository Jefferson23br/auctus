RewriteEngine On
RewriteBase /

# 0) Redirecionar /index.php para /
RewriteCond %{THE_REQUEST} \s/+index\.php[\s?] [NC]
RewriteRule ^index\.php$ / [R=301,L]

# 1) Redirecionar qualquer .php digitado na URL para sem .php
RewriteCond %{THE_REQUEST} \s/+([^ ]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# 2) Redirecionar qualquer .html digitado na URL para sem .html
RewriteCond %{THE_REQUEST} \s/+([^ ]+)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# 3) Carregar o .php quando acessa sem extensão
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# 4) Carregar o .html quando acessa sem extensão
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+)$ $1.html [L]